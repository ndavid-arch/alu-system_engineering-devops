#!/usr/bin/env bash
# Add instructor's SSH public key to the server for non-interactive access

USER="d92e296964c9"
HOST="d92e296964c9.d33531d3.alu-cod.online"
KEY="$HOME/.ssh/school"  # Your private key created in 1-create_ssh_key_pair
PUB_KEY="ssh-rsa "

# Connect to the server and append the public key if it does not exist
ssh -i "$KEY" "$USER@$HOST" "\
mkdir -p ~/.ssh && chmod 700 ~/.ssh && \
grep -qxF '$PUB_KEY' ~/.ssh/authorized_keys || echo '$PUB_KEY' >> ~/.ssh/authorized_keys && \
chmod 600 ~/.ssh/authorized_keys"