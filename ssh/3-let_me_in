#!/usr/bin/env bash
# Add the ALU public key to the ubuntu user on server 7013-web-01

# Make sure the .ssh directory exists
ssh ubuntu@7013-web-01 "mkdir -p ~/.ssh && chmod 700 ~/.ssh"

# Add the public key (only if it doesn't already exist)
ssh ubuntu@7013-web-01 "grep -qxF 'ssh-rsa ' ~/.ssh/authorized_keys || echo 'ssh-rsa ' >> ~/.ssh/authorized_keys"

# Fix permissions
ssh ubuntu@7013-web-01 "chmod 600 ~/.ssh/authorized_keys"